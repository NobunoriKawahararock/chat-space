.side--bar
  .side--bar__user--name
    .side--bar__user--name__box
      .side--bar__user--name__box__name
        = current_user.name
      .side--bar__user--name__box__btn
        .side--bar__user--name__box__btn__edit--btn
          = link_to new_group_path, class: "a" do
            = icon('far', 'edit')
        .side--bar__user--name__box__btn__cog--btn
          = link_to edit_user_path(current_user), class: "a" do
            = icon('fa', 'cog')

  .side--bar__group--list
    - current_user.groups.each do |group|
      .side--bar__group--list__box
        = link_to '#', class: "d" do
          .side--bar__group--list__box__title
            = group.name
          .side--bar__group--list__box__text
            メッセージはまだありません。


   
      


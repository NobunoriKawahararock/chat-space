.main--chat__message-list__box
  .main--chat__message-list__box__name
    = message.user.name
  .main--chat__message-list__box__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main--chat__message-list__text
  - if message.text.present?
    %p.main--chat__message-list__text
      = message.text
  = image_tag message.image.url, class: 'main--chat__message-list__text__image' if message.image.present?
.main--chat
  .main--chat__group--info
    .main--chat__group--info__group--name
      .main--chat__group--info__group--name__text
        =@group.name
      .main--chat__group--info__group--name__menber--name
        Memberï¼š
        %ul
          - @group.users.each do |user|
            %li= user.name

    .main--chat__group--info__edit--btn__border
      = link_to 'Edit', edit_group_path(current_user),class: "a"
        

  .main--chat__message-list
    = render @messages

  
  .main--chat__message--form
    = form_for [@group, @message] do |f|
      .main--chat__message--form__box
        = f.text_field :text, class: 'main--chat__message--form__box__b', placeholder: 'type a message'
        = f.label :image, class: 'main--chat__message--form___box__picture' do
          = icon('fas', 'image', class: 'c')
          = f.file_field :image, class: 'main--chat__message--form___box__picture__file'
      = f.submit 'Send', class: 'submit'